<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.teaching.project7.MainActivity">

    <TextView
        android:id="@+id/lblInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        />


    <SeekBar
        android:id="@+id/seekBarLeft"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="189dp"
        android:layout_height="52dp"
        android:max="6"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="72dp" />

    <SeekBar
        android:id="@+id/seekBarUD"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="190dp"
        android:layout_height="49dp"
        android:layout_marginTop="60dp"
        android:max="6"
        android:progress="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarLeft" />

    <SeekBar
        android:id="@+id/seekBarRight"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="188dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:max="6"
        android:progress="3"
        app:layout_constraintTop_toBottomOf="@+id/seekBarUD"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reconnect"
        tools:layout_editor_absoluteX="263dp"
        tools:layout_editor_absoluteY="24dp" />

</android.support.constraint.ConstraintLayout>
